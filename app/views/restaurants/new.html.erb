<h1>Add a new restaurant:<h1>

<%= form_with scope: :restaurant, url: restaurants_path, local:true do |form|%>

<div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
</div>

<div>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
</div>
<div>
    <%= form.label :cuisine %><br>
    <%= form.text_field :cuisine %>
</div>
<div>
    <%= form.label :image_url %><br>
    <%= form.text_field :image_url %>
</div>

 <p>
    <%= form.submit %>
  </p>


<% end%>