<div class="d-flex flex-row m-5">
    <div class="restaurant">
      <h1 class="m-2">
        <strong>Restaurant name:</strong>
        <%= @restaurant.name %>
      </h1>
      
      <h2 class="m-2">
        <strong>Address:</strong>
        <%= @restaurant.address %>
      </h2>
      <h3 class="m-2">
        <strong>Cuisine:</strong>
        <%= @restaurant.cuisine %>
      </h3>

      <p>
        <img src=<%= @restaurant.image_url %> alt="restaurant" width="500" >
      </p>

      <p>
        <strong>Description:</strong>
        <%= @restaurant.description %>
      </p>

      <%= link_to "Back", restaurants_path, class:"btn btn-primary m-2"%>
      <%= link_to "Edit information", edit_restaurant_path(@restaurant), class:"btn btn-secondary m-2"%>
    </div>

  <div class="review m-5">
    
    <div class="m-3">
    <% if @restaurant.reviews.any? %>
      <h2>All reviews:</h2>
    <% end%>
        <% @restaurant.reviews.each do |review|%>
          <div class="m-4" >
            <div><strong><%= review.person %></strong></div>
            <%= review.body %>
            <p>
              <%= link_to "delete", [review.restaurant, review], method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-danger mt-2"%>
            </p>
          </div>
        <% end%>
        <h2>Add a review:</h2>

    <%= form_with model: [ @restaurant, @restaurant.reviews.build ] do |form| %>
      <p>
        <%= form.text_field :person, placeholder:"You are:" %>
      </p>
      <p>
        <%= form.text_area :body, placeholder:"How's this restaurant"%>
      </p>
      <p>
        <%= form.submit class:"btn btn-primary" %>
      </p>
    <% end%>
  </div>

</div>